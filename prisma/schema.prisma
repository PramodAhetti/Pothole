// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pothole {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  coordinates  Coordinates
  severity     Int
  dateReported DateTime  @default(now())
  reportedBy   String
  img String    // Optional: Store the address or city of the pothole
}

type Coordinates {
  latitude  Float
  longitude Float
}
